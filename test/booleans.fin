Test suite: "Booleans" is: {
    Test test: "toString" is: {
        Test that: true toString  equals: "true"
        Test that: false toString equals: "false"
    }

    Test test: "not" is: {
        Test that: true not  equals: false
        Test that: false not equals: true
        Test that: true not not  equals: true
        Test that: false not not equals: false
    }

    Test test: "and:" is: {
        ' should work with values
        Test isTrue:  (true and: true)
        Test isFalse: (true and: false)
        Test isFalse: (false and: true)
        Test isFalse: (false and: false)

        ' and blocks
        Test isTrue:  ({ true } and: { true })
        Test isFalse: ({ true } and: { false })
        Test isFalse: ({ false } and: { true })
        Test isFalse: ({ false } and: { false })

        ' should short-circuit
        shorted <- true
        Test isFalse: ({ false } and: { shorted <-- false, true })
        Test isTrue: shorted
    }

    Test test: "or:" is: {
        ' should work with values
        Test isTrue:  (true or: true)
        Test isTrue:  (true or: false)
        Test isTrue:  (false or: true)
        Test isFalse: (false or: false)

        ' and blocks
        Test isTrue:  ({ true } or: { true })
        Test isTrue:  ({ true } or: { false })
        Test isTrue:  ({ false } or: { true })
        Test isFalse: ({ false } or: { false })

        ' should short-circuit
        shorted <- true
        Test isTrue: ({ true } or: { shorted <-- false, false })
        Test isTrue: shorted
    }
}