Test suite: "Messages" is: {
    Test test: "missing args are Nil" is: {
        {|a b c d|
            Test isNil: a
            Test isNil: b
            Test isNil: c
            Test isNil: d
        } call
        
        {|a b c d|
            Test that: a equals: 1
            Test isNil: b
            Test isNil: c
            Test isNil: d
        } call: 1
        
        {|a b c d|
            Test that: a equals: 1
            Test that: b equals: 2
            Test isNil: c
            Test isNil: d
        } call: 1 : 2
        
        {|a b c d|
            Test that: a equals: 1
            Test that: b equals: 2
            Test that: c equals: 3
            Test isNil: d
        } call: 1 : 2 : 3
    }

    Test test: "extra args are ignored" is: {
        {|a b c d|
            Test that: a equals: 1
            Test that: b equals: 2
            Test that: c equals: 3
            Test that: d equals: 4
        } call: 1 : 2 : 3 : 4 : 5 : 6 : 7
    }
}