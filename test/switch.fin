Test suite: "Switch" is: {
  Test test: "Match value" is: {
    found <- false

    2 switch \
    case: 1 do: { Test fail } ;
    case: 2 do: { found <-- true } ;
    case: 3 do: { Test fail }

    Test is-true: found
  }

  Test test: "No match" is: {
    2 switch \
    case: 1 do: { Test fail } ;
    case: 3 do: { Test fail }
  }

  Test test: "Default match" is: {
    found <- false
    5 switch \
    case: 1 do: { Test fail } ;
    case: 3 do: { Test fail } ;
    default: { found <-- true }

    Test is-true: found
  }

  Test test: "Match predicate" is: {
    found <- false
    2 switch \
    case: { i -> i < 2 } do: { Test fail } ;
    case: { i -> i = 2 } do: { found <-- true } ;
    case: { i -> i > 2 } do: { Test fail }

    Test is-true: found
  }

  Test test: "Returns value" is: {
    result <- 2 switch \
      case: 1 do: { "one" } ;
      case: 2 do: { "two" } ;
      case: 3 do: { "three" }

    Test that: result equals: "two"
  }

  // need to test returning values from a switch
}
